<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutMessageBody"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginVertical="@dimen/msg_vertical_margin"
    android:layout_marginEnd="@dimen/msg_start_margin"
    android:layout_marginStart="@dimen/msg_end_margin"
    android:background="@drawable/bg_chat_message"
    android:padding="@dimen/msg_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="1"
        android:text="@string/message_text_placeholder"
        tools:ignore="InefficientWeight" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="bottom"
            android:text="@string/message_time_placeholder"
            android:textSize="5pt"
            android:textColor="@color/secondaryText"/>

        <ImageView
            android:id="@+id/ivMessageStatus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_msg_double_check"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>
