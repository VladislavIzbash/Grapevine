<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/msg_vertical_margin"
    android:layout_marginEnd="@dimen/msg_end_margin"
    android:layout_marginStart="@dimen/msg_start_margin"
    android:padding="@dimen/msg_padding"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/cardPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|start"
        android:layout_marginEnd="6dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_placeholder"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingVertical="2dp"
        android:background="@drawable/bg_chat_message"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <TextView
                android:id="@+id/tvMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/message_text_placeholder"
                android:textColor="@color/messageText" />

            <include layout="@layout/forwarded_message"
                android:id="@+id/layoutForwardedMessage"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginHorizontal="5dp"
            android:text="@string/message_time_placeholder"
            style="@style/Grapevine.TextAppearance.Timestamp" />

    </LinearLayout>


</LinearLayout>