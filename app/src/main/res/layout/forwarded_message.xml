<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@color/attachmentBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewLine"
        android:layout_width="3dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvForwardedText"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/primary" />

    <TextView
        android:id="@+id/tvForwardedUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewLine"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/username"
        android:textColor="@color/primary"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvForwardedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@+id/viewLine"
        app:layout_constraintTop_toBottomOf="@id/tvForwardedUsername"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/message_text_placeholder"
        android:textColor="@color/messageText"/>

    <TextView
        android:id="@+id/tvForwardedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvForwardedText"
        android:text="@string/message_time_placeholder"
        style="@style/Grapevine.TextAppearance.Timestamp" />

</androidx.constraintlayout.widget.ConstraintLayout>